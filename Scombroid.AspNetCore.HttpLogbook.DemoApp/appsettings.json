{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "HttpLogbook": {
    "Options": {
      "Header": true
    },
    "Paths": {
      "*": {
        "Methods": {
          "*": {
            "Enabled": true,
            "Request": {
              "Body": false
            },
            "Response": {
              "Body": false
            }
          }
        }
      },
      "/connect/token": {
        "Methods": {
          "*": {
            "Enabled": true,
            "Request": {
              "Body": true,
              "BodyMasks": [
                {
                  "Pattern": "password=[^&]+",
                  "Replacement": "password=***"
                }
              ]
            },
            "Response": {
              "Body": true,
              "BodyMasks": [
                {
                  "Pattern": "\"access_token\":\"(.+?)\"",
                  "Replacement": "\"access_token\":\"***\""
                }
              ]
            }
          }
        }
      },
      "/weatherforecast": {
        "Methods": {
          "*": {
            "Enabled": true,
            "Request": {
              "Body": true
            },
            "Response": {
              "Body": true
            }
          }
        }
      },
      "/favicon.ico": {
        "Methods": {
          "GET": {
            "Enabled": false
          }
        }
      }
    }
  }
}
